<h1>Editing event</h1>

<% form_for(@event) do |f| %>
 
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :start_at %><br />
    <%= f.text_field :start_at %>
  </p>
  
  <p>
    <%= f.label :end_at %><br />
    <%= f.text_field :end_at %>
  </p>

  <p>
    Tu by to zrejme chcelo vybrat z nejakeho comboboxu ownera<br />
    <%= f.label :owner_id %><br />
    <%= f.text_field :owner_id %>
  </p>

  <p>
    <%= f.label :owner_type %><br />
    <%= f.text_field :owner_type %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', calendar_path %>


