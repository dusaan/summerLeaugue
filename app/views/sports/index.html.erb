<h1>Listing sports</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parts</th>
    <th>Team</th>
  </tr>

<% @sports.each do |sport| %>
  <tr>
    <td><%=h sport.name %></td>
    <td><%=h sport.parts %></td>
    <td><%=h sport.team %></td>
    <td><%= link_to 'Show', sport %></td>
    <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
    <td><%= link_to 'Destroy', sport, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New sport', new_sport_path %>