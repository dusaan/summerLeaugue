<h1>New court</h1>

<% form_for(@court) do |f| %>
  <%= f.error_messages %>

  
  <p>
    <%= f.label :názov %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :mesto %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :ulica %><br />
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label :povrch %><br />
    <%= f.select :surface, ["asfalt", "betón", "guma", "iné"] %>
  </p>
  <p>
    <%= f.label :popis %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label "počet ihrísk" %><br />
    <%= f.text_field :courts %>
    <%= f.submit 'Create' %><%= link_to 'Späť', courts_path %>
  </p>
<% end %>
