<% if @selected_sport_name %>
  <%= link_to raw('<span>pravidlá</span>'), rules_path(@selected_sport_name)  , :class => ((params[:action] == "rules" && params[:sport] != "contacts")? 'submenu_item submenu_item_selected' : 'submenu_item')%>
<% end%>
<% if @current_user %>

  <% case @selected_sport_name when "streetball", "volleyball", "soccer"  %>
    <%= link_to raw('<span>zápasy</span>'), matches__path(@selected_sport.to_s) , :class => (params[:controller] == "matches" ? 'submenu_item submenu_item_selected' : 'submenu_item') if false%>
    <%= link_to raw('<span>tabuľka </span>'), scores_path(@selected_sport.to_s) , :class => (params[:controller] == "scores" ? 'submenu_item submenu_item_selected' : 'submenu_item') if false%>
    <%= link_to raw('<span>tímy </span>'), teams__path(@selected_sport.to_s)  , :class => (params[:controller] == "teams" ? 'submenu_item submenu_item_selected' : 'submenu_item') %>
    <%= link_to raw('<span>ihriská </span>'), courts_path  , :class => (params[:controller] == "courts" ? 'submenu_item submenu_item_selected' : 'submenu_item') if (false && @selected_sport_name == "streetball")%>
    <%= link_to raw('<span>turnaj</span>'), tournament_path(@first_tournament_id) , :class => (params[:controller] == "tournaments" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>

  <% when "running" %>
    <%= link_to raw("<span> bežci </span>"), users__path(@selected_sport.to_s) , :class => (params[:controller] == "users" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>
    <%= link_to raw('<span>turnaj</span>'), tournaments_path , :class => (params[:controller] == "tournaments" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>


  <% when "petanque" %>
    <%= link_to raw("<span> tímy </span>"), teams__path(@selected_sport.to_s) , :class => (params[:controller] == "teams" ? 'submenu_item submenu_item_selected' : 'submenu_item') %>
    <%= link_to raw('<span>turnaj</span>'), tournaments_path , :class => (params[:controller] == "tournaments" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>

  <% when "squash", "badminton", "petanque", "billiard", "golf" %>
    <%= link_to raw("<span> hráči </span>"), users__path(@selected_sport.to_s) , :class => (params[:controller] == "users" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>
    <%= link_to raw('<span>zápasy</span>'), matches__path(@selected_sport.to_s) , :class => (params[:controller] == "matches" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>
    <%= link_to raw('<span>tabuľka </span>'), scores_path(@selected_sport.to_s) , :class => (params[:controller] == "scores" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>
    <%= link_to raw('<span>pravidlá</span>'), rules_path(@selected_sport.to_s)  , :class => (params[:action] == "rules" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>
    <%= link_to raw('<span>ligy</span>'), leagues__path(@selected_sport.to_s) , :class => (params[:controller] == "leagues" ? 'submenu_item submenu_item_selected' : 'submenu_item')%>
  <% end %>
<% end%>
