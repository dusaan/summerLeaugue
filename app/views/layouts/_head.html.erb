<div id="fb"> <iframe src="http://www.facebook.com/plugins/like.php?href=aliga.sk&amp;layout=standard&amp;show_faces=true&amp;width=200&amp;action=like&amp;font=arial&amp;colorscheme=light&amp;height=70" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:200px; height:70px;" allowTransparency="true"></iframe></div>
      
    <div id="container" <%= "class=\"#{@selected_sport_name}ova\"" unless @selected_sport_name.nil?  %>>
      <div id="header">
        <div id="sportsmen">
         <% (["streetball","squash", "badminton", "petanque", "billiard", "golf"] ).each do |sport| %>
          <div class= "sportsman" id = "sportsman_<%= sport %>">
          <%= 
              @sport = Sport.find_by_name sport.to_s      
              link_to "", update_selected_path(@sport), :class=> (@selected_sport.to_s==@sport.id.to_s ? "sportsman_selected" : "")
            %>
          </div>
<% end %>
        </div>
        <div id="menu">
<% (["streetball","squash", "badminton", "petanque", "billiard", "golf"] ).each do |sport| %>
          <div class="menuitem" id="menu_<%= sport %>">
            <%= 
              @sport = Sport.find_by_name sport.to_s
              link_to "", update_selected_path(@sport), :class=> (@selected_sport.to_s==@sport.id.to_s ? "menuitem_selected" : "")
            %>
          </div>
<% end %>
        </div>
        <div id="submenu">
          <%= render :partial => "layouts/menu" %>
        </div>
            <%= render :partial => "layouts/user_login" %>
