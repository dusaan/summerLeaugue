<h1>Editing league</h1>

<% form_for(@league) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :rounds %><br />
    <%= f.text_field :rounds %>
  </p>
  <p>
    <%= f.label :starts_at %><br />
    <%= calendar_date_select_tag "starts_at","#{@league.starts_at.year}-#{@league.starts_at.month}-#{@league.starts_at.day}" %>
  </p>
  <p>
    <%= f.label :finishes_at %><br />
    <%= calendar_date_select_tag "finishes_at", "#{Time.now.to_date}" %>
  </p>
  <p>
    <%= f.label :Sport %><br />
    <%= f.select :sport_id, Sport.find(:all, :order => "name").collect {|p| [p.name, p.id]}, {:prompt => 'Povinne pole'} %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

